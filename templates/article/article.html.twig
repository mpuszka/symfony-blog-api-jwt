{% extends 'base.html.twig' %}

{% block title %}Article - {{ article.title }}!{% endblock %}

{% block body %}
    <div class="container-fluid mb-5">
        <div class="row">
            <img class="img-fluid" src="{{ article.image }}" alt="{{ article.title }}" />
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ article.title }}</h1>
                <p>{{ article.body }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="float-right">{{ article.date|date('Y-m-d') }}</p>
            </div>
        </div>
    </div>
{% endblock %}
