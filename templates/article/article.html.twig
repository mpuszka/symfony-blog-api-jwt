{% extends 'base.html.twig' %}

{% block title %}Article - {{ article.title }}!{% endblock %}

{% block body %}
    <div class="container-fluid mb-5">
        <div class="row">
            <img class="img-fluid" src="{{ article.image }}" alt="{{ article.title }}" />
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success mt-3" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h1>{{ article.title }}</h1>
                <p>{{ article.body }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="float-right">{{ article.date|date('Y-m-d') }}</p>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                {{ form(form) }}
            </div>
            <div class="col-md-6">
                {% if comments is not empty %}
                    <h2>Comments</h2>
                    {% for comment in comments %}
                        <div class="media mt-5 mb-5">
                            <img style="width:50px;" class="mr-3" src="{{ comment.getUser().getAvatar() }}" alt="{{ comment.getUser().getFullName() }}">
                            <div class="media-body">
                                <h5 class="mt-0">{{ comment.title }}</h5>
                                <p>{{ comment.body }}</p>
                                <div class="float-right">{{ comment.getUser().getFullName() }}</div>
                            </div>
                        </div>
                        <hr />
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
