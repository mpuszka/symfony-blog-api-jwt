{% extends 'base.html.twig' %}

{% set title = '' %}

{% if article is defined %}
    {% set title = article.title %}
{% else %}
    {% set title = 'New article' %}
{% endif %}

{% block title %}{{ title }}!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}